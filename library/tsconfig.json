{
    "compilerOptions": {
        "allowJs": true,
        "jsx": "react",
        "lib": ["es2018", "dom", "dom.iterable"],
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "target": "esnext",
        "module": "esnext",
        "isolatedModules": false,
        "baseUrl": ".",
        "paths": {
            "@library/*": ["./src/scripts/*"]
        },
        "typeRoots": [
            "@types",
            "node_modules/@types",
            "../node_modules/@types",
        ],
        "preserveSymlinks": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "plugins": [
            {
                "name": "typescript-tslint-plugin"
            }
        ],
    },
    "exclude": ["**/*.test.*"]
}
